<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jskgmail.attendance.SearchActivity">
<RelativeLayout
    android:layout_width="395dp"
    android:layout_height="587dp"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">


    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:keepScreenOn="true"
        android:orientation="horizontal"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:queryHint="Search here" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="Enter the Username of your friend to start comparison :"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/listsearch"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignLeft="@+id/searchView"
        android:layout_alignStart="@+id/searchView"
        android:layout_below="@+id/searchView" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/searchView"
        android:layout_alignStart="@+id/searchView"
        android:layout_below="@+id/listsearch"
        android:layout_marginTop="25dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="Your Friends List :"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/friendlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/searchView"
        android:layout_alignRight="@+id/searchView"
        android:layout_below="@+id/textView52"
        android:layout_marginTop="8dp" />

</RelativeLayout>
</android.support.constraint.ConstraintLayout>
